@using System.Web.UI.WebControls
@using DevExpress.Web
@using DevExpress.Web.Mvc.UI
@model int?

@{
    ViewBag.Title = "StokFisTipiMainPanel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <script>
        var stokFisTipiScript = {
            Ekle :function(menuTag,url) {
                console.log('e');
                LoadingPanel.Show();
                $.ajax({
                    type: "POST",
                    url: url,
                    data: { menuTag: menuTag},
                    success: function(response) {
                        pageControlStokFisTipi.GetTabByName('Tab1').SetVisible(0);
                        pageControlStokFisTipi.GetTabByName('Tab2').SetVisible(1);
                        pageControlStokFisTipi.SetActiveTab(pageControlStokFisTipi.GetTabByName('Tab2'));
                        $("#editableContainer").html(response);
                    }
                });
                LoadingPanel.Hide();
            },
            Degistir: function(gridName, menuTag, url) {
                var grid = ASPxClientControl.GetControlCollection().GetByName(gridName);
                var selectedRow = grid.GetSelectedKeysOnPage();
                if (selectedRow.length > 0) {
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: {
                            Id: selectedRow[0],
                            menuTag: menuTag
                        },
                        success: function(response) {
                            pageControlStokFisTipi.GetTabByName('Tab1').SetVisible(0);
                            pageControlStokFisTipi.GetTabByName('Tab2').SetVisible(1);
                            pageControlStokFisTipi.SetActiveTab(pageControlStokFisTipi.GetTabByName('Tab2'));
                            $("#editableContainer").html(response);
                        }
                    });
                } else {
                    BpsAlert.warning('Lütfen kayıt seçiniz !');
                    return;
                }
            },
            FormStokFisTipiKaydet: function () {
                var formList = [];
                formList.push("formStokFisTipiEkle");
                var menuTag=@Model;
                var model = {};
                var grid = ASPxClientControl.GetControlCollection().GetByName('gridStokFisTipi');
                formList.forEach(function(formName) {
                    var form = ASPxClientControl.GetControlCollection().GetByName(formName);
                    form.rootItem.items.forEach(function (item) {
