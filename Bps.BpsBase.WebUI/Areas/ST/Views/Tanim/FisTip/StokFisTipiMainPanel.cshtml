                        }
                        return;
                    }
                });
            },
            FormStokFisTipiIptal: function () {
                pageControlStokFisTipi.GetTabByName('Tab1').SetVisible(1);
                pageControlStokFisTipi.GetTabByName('Tab2').SetVisible(0);
            }
        }

    </script>

    @Html.DevExpress().PageControl(
        settings =>
        {
            settings.Name = "pageControlStokFisTipi";
            settings.Width = Unit.Percentage(100);
            settings.ControlStyle.CssClass = "dxtcFixed";
            settings.EnableTabScrolling = true;
            settings.TabAlign = TabAlign.Justify;
            settings.ClientSideEvents.Init = @"function(s,e) { pageControlStokFisTipi.GetTabByName('Tab2').SetVisible(0);}";
            settings.ActiveTabIndex = 0;

            settings.TabPages.Add("Stok Fiş Tipi Listesi", "Tab1").SetContent(() =>
            {
                Html.RenderAction("StokFisTipiGridPartial", "Tanim",new {area = "ST"});
            });

            settings.TabPages.Add("Stok Fiş Tipi İşlemleri", "Tab2").SetContent(() =>
            {
                ViewContext.Writer.Write("<div id='editableContainer'>");
                @Html.RenderAction("StokFisTipiEkleWindow", "Tanim", new {menuTag = Model});
                ViewContext.Writer.Write("</div>");
            });
        }).GetHtml()
}