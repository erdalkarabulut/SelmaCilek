@model Bps.BpsBase.Entities.Models.GN.Single.CmbComboModel

@Html.DevExpress().ComboBoxFor(m => m.PARENT, settings =>
{
    settings.Name = "PARENT";
    settings.Properties.TextField = "MNUNAM";
    settings.Properties.ValueField = "MNUTAG";
    settings.Properties.TextFormatString = "{0}";
    settings.Properties.Columns.Add("MNUNAM", "Parent", 140);
    settings.Properties.Columns.Add("MNUTAG", "Parent Id", 80);
    settings.Width = Unit.Percentage(100);
    settings.Properties.CallbackPageSize = 15;
    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
    settings.CallbackRouteValues = new { Controller = "Tanim", Action = "ParentMenuByProjeCmbPartial" , area="GN", projeKod = ViewData["projeKod"] };
}).BindList(Model.MenuList).Bind(Model.PARENT).GetHtml()