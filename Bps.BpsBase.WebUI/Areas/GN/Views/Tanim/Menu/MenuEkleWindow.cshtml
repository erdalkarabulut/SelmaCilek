@using Bps.BpsBase.Entities.Concrete.GN
@model GNMENU

@{
    Layout = null;
}

@Html.DevExpress().PopupControl(
    settings =>
    {
        settings.Name = "ppMenuEkle";
        settings.Width = 600;
        settings.AllowDragging = true;
        settings.CloseAction = CloseAction.CloseButton;
        settings.CloseOnEscape = true;
        settings.PopupAnimationType = AnimationType.None;
        settings.HeaderText = "Menü " + (Model.Id > 0 ? "Düzenle" : "Ekle");
        settings.ShowOnPageLoad = true;
        settings.Modal = true;
        settings.AutoUpdatePosition = true;
        settings.PopupHorizontalAlign = PopupHorizontalAlign.WindowCenter;
        settings.PopupVerticalAlign = PopupVerticalAlign.WindowCenter;
        settings.ShowFooter = true;

        settings.SetContent(() =>
        {
            @Html.DevExpress().FormLayout(formLayoutsettings =>
            {
                formLayoutsettings.Name = "formMenuEkle";

                formLayoutsettings.Items.AddGroupItem(g =>
                {
                    g.Caption = "Menü Detayı";
                    g.ColCount = 2;

                    g.Items.Add(m => m.Id, i => { i.ClientVisible = false; });
                    g.Items.Add(m => m.SIRKID, i => { i.ClientVisible = false; });
                    g.Items.Add(m => m.EKKULL, i => { i.ClientVisible = false; });
                    g.Items.Add(m => m.ETARIH, i => { i.ClientVisible = false; });

                    g.Items.Add(m => m.PROKOD, i =>
                    {
                        i.NestedExtension().ComboBox(s =>
                        {
                            s.Name = "PROKOD";
                            s.Properties.CallbackPageSize = 15;
                            s.Properties.FilterMinLength = 0;
                            s.SelectedIndex = 0;
                            s.Properties.TextField = "TANIMI";
                            s.Properties.ValueField = "HARKOD";
                            s.Properties.TextFormatString = "{0}";
                            s.Properties.Columns.Add("TANIMI", "Tanımı", 140);
                            s.Properties.Columns.Add("HARKOD", "Hareket Kodu", 80);
                            s.Properties.DataSource = ViewData["ProjeList"];
                            s.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                            s.Properties.ClientSideEvents.SelectedIndexChanged = "function(s, e) { PARENT.PerformCallback({ projeKod: s.GetValue()});}";
                            s.Properties.DropDownStyle = DropDownStyle.DropDown;
                        });
                    });
                    g.Items.Add(m => m.MNUNAM, i =>
                    {
                        i.NestedExtension().TextBox(s =>
                        {
                            s.Name = "MNUNAM";
                            s.ShowModelErrors = true;
                            s.Properties.ValidationSettings.Display = Display.Dynamic;
                        });
                    });
                    g.Items.Add(m => m.MNUTAG, i =>
                    {
                        i.NestedExtension().TextBox(s =>
                        {
                            s.Name = "MNUTAG";
                            s.ShowModelErrors = true;
                            s.Properties.ValidationSettings.Display = Display.Dynamic;
                        });
                    });
                    g.Items.Add(m => m.PARENT, i =>
                    {
                        i.CaptionSettings.AssociatedNestedExtensionName = "PARENT";
                        i.SetNestedContent(() =>
                        {
                            Html.RenderAction("ParentMenuByProjeCmbPartial", "Tanim", new { projeKod = Model.PROKOD, parent = Model.PARENT });
                        });
                    });
                    g.Items.Add(m => m.GNICON, i =>
                    {
                        i.NestedExtension().TextBox(s =>
                        {
                            s.Name = "GNICON";
                            s.ShowModelErrors = true;
                            s.Properties.ValidationSettings.Display = Display.Dynamic;
                        });
                    });
                    g.Items.Add(m => m.GNAREA, i =>
                    {
                        i.NestedExtension().TextBox(s =>
                        {
                            s.Name = "GNAREA";
                            s.ShowModelErrors = true;
                            s.Properties.ValidationSettings.Display = Display.Dynamic;
                        });
                    });
                    g.Items.Add(m => m.CONTNM, i =>
                    {
                        i.NestedExtension().TextBox(s =>
                        {
                            s.Name = "CONTNM";
                            s.ShowModelErrors = true;
                            s.Properties.ValidationSettings.Display = Display.Dynamic;
                        });
                    });
                    g.Items.Add(m => m.FUNCNM, i =>
                    {
                        i.NestedExtension().TextBox(s =>
                        {
                            s.Name = "FUNCNM";
                            s.ShowModelErrors = true;
                            s.Properties.ValidationSettings.Display = Display.Dynamic;
                        });
                    });
                    g.Items.Add(m => m.ACTIVE, i =>
                    {
                        i.NestedExtension().CheckBox(s =>
                        {
                            s.Name = "ACTIVE";
                            s.Checked = true;
                        });
                    });
                });
                FormLayoutHelper<GNMENU>.Settings(formLayoutsettings);
            }).Bind(Model).Render();
        });

        settings.SetFooterTemplateContent(c =>
        {
            ViewContext.Writer.Write("<div id='menuFormFooter'>");
            Html.RenderAction("FormFooterPartial", "Main", new { area = "", ekleJs = "FormMenuKaydet();", iptalJs = "ppMenuEkle.Hide();" });
            ViewContext.Writer.Write("</div>");
        });
    }).GetHtml()