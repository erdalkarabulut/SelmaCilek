@using Bps.BpsBase.Entities.Concrete.CR
@using Bps.Core.Web.Model
@model List<CRCARI>
@{
    var cariTipKod = ViewData["CariTipKod"].ToString();
}

@{
    Html.DevExpress().GridView<CRCARI>(settings =>
    {
        settings.Name = "gridCariKart";
        settings.KeyFieldName = "Id";
        settings.CallbackRouteValues = new {Controller = "Tanim", Action = "CariGridPartial", area="CR" };
        settings.ClientSideEvents.BeginCallback = "function(s,e){" +
                                                  "e.customArgs['menuTag'] =" + ((ProjeMenuListed)ViewData["YetkiModel"]).MNUTAG + ";" +
                                                  "e.customArgs['cariTipKod'] = cmb_CariKart_Tip.GetValue();" +
                                                  "}";
        var toolParam = new DevToolBarParam()
        {
            Grid = settings.Name,
            EkleUrl = Url.Action("CariKartEkleWindow", "Tanim", new {area = "CR"}),
            DegistirUrl = Url.Action("CariKartEkleWindow", "Tanim", new {area = "CR" }),
            SilUrl = Url.Action("", "Tanim", new {area = "CR" }),
            YerlesimDiv = "cariLayoutDiv",
            BelgeAkisDiv = "cariBelgeAkisDiv",
            TopluAktarDiv = "cariTopluAktDiv",
            MenuTag = ((ProjeMenuListed) ViewData["YetkiModel"]).MNUTAG,
            Type = "CRCARI",
            ExcluldeList = new List<string>() { "tb_Add", "tb_Edit" },
            ItemList = new List<MVCxGridViewToolbarItem>()

        };

        var yetki = (ProjeMenuListed) ViewData["YetkiModel"];

        #region Toolbar

        var addButton = new MVCxGridViewToolbarItem();
        addButton.Text = "Ekle";
        addButton.Name = "tb_Add";
        addButton.Enabled = yetki.EKLEME == 1;
        addButton.Command = GridViewToolbarCommand.Custom;
        addButton.NavigateUrl = @"javascript:cariKart.Ekle(" + toolParam.MenuTag + ",'" + toolParam.EkleUrl + "', 'cmb_CariKart_Tip', 'pageControlCariKart')";
        addButton.Image.IconID = IconID.ActionsNew16x16;

        var editButton = new MVCxGridViewToolbarItem();
        editButton.Text = "Değiştir";
        editButton.Name = "tb_Edit";
        editButton.Enabled = yetki.DEGIST == 1;
        editButton.Command = GridViewToolbarCommand.Custom;
        editButton.NavigateUrl = @"javascript:cariKart.Degistir('" + toolParam.Grid + "', " + toolParam.MenuTag + ", '" + toolParam.DegistirUrl + "', 'cmb_CariKart_Tip', 'pageControlCariKart')";
        editButton.Image.IconID = IconID.ActionsEdit16x16devav;
        var backButton = new MVCxGridViewToolbarItem();
        backButton.Text = "Geri";
        backButton.Name = "tb_Back";
        backButton.Command = GridViewToolbarCommand.Custom;
        backButton.NavigateUrl = @"javascript:pageControlCariKart.SetActiveTabIndex(0);";
        backButton.Image.IconID = IconID.NavigationBackward16x16;

        toolParam.ItemList.Add(addButton);
        toolParam.ItemList.Add(editButton);
        toolParam.ItemList.Add(backButton);

        @Html.Action("ToolBar", "Main", new
        {
            area = "",
            settings,
            yetki = (ProjeMenuListed)ViewData["YetkiModel"],
            toolParam = toolParam
        });

        #endregion

        #region Columns

        settings.Columns.Add(m => m.CRHRKD, column =>
        {
            column.EditorProperties().ComboBox(p =>
            {
                p.TextField = "TANIMI";
                p.ValueField = "HARKOD";
                p.ValueType = typeof(string);
                p.BindList(ViewData["CRHRKDList"]);
            });
        });

        settings.Columns.Add(m => m.CRBGKD, column =>
        {
            column.EditorProperties().ComboBox(p =>
            {
                p.TextField = "TANIMI";
                p.ValueField = "HARKOD";
                p.ValueType = typeof(string);
                p.BindList(ViewData["CRBGKDList"]);
            });
        });

        #endregion Columns

        List<string> excludeList = new List<string>();

        excludeList.Add("STANKD");
        excludeList.Add("STALKD");
        GridViewHelper<CRCARI>.Settings(settings, new CRCARI(), excludeList);
    }).Bind(Model).Render();
}
<div id="cariLayoutDiv">
</div>
<div id="cariBelgeAkisDiv">
</div>
<div id="cariTopluAktDiv">
</div>